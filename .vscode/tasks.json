{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "gradle: build",
      "type": "shell",
      "command": "./gradlew",
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "args": ["build"],
      "group": "build",
      "problemMatcher": ["$gradle"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "gradle: test",
      "type": "shell",
      "command": "./gradlew",
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "args": ["test"],
      "problemMatcher": ["$gradle"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "gradle: runClient",
      "type": "shell",
      "command": "./gradlew",
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "args": ["runClient"],
      "problemMatcher": ["$gradle"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "gradle: runClient (debug)",
      "type": "shell",
      "command": "./gradlew",
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "args": ["runClient"],
      "isBackground": true,
      "options": {
        "env": {
          "JAVA_HOME": "C:/Users/Public/.jdks/jdk-21.0.8",
          "PATH": "C:/Users/Public/.jdks/jdk-21.0.8/bin;${env:PATH}"
        }
      },
      "problemMatcher": [
        {
          "owner": "custom",
          "pattern": {
            "regexp": ".*"
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Listening for transport dt_socket at address: 5005",
            "endsPattern": "Disconnected from the target VM"
          }
        }
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
